  "shortcuts": [
    {
      "name": "Feed",
      "short_name": "Feed",
      "description": "View your social feed and latest posts",
      "url": "/app.html",
      "icons": [
        {
          "src": "icons/shortcut-feed.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Collection",
      "short_name": "Collection",
      "description": "Manage your card collection",
      "url": "/my_collection.html",
      "icons": [
        {
          "src": "icons/shortcut-collection.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Deck Builder",
      "short_name": "Deck Builder",
      "description": "Build and test competitive decks",
      "url": "/deck.html",
      "icons": [
        {
          "src": "icons/shortcut-deck.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Marketplace",
      "short_name": "Marketplace",
      "description": "Buy and sell cards securely",
      "url": "/marketplace.html",
      "icons": [
        {
          "src": "icons/shortcut-marketplace.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "file_handlers": [
    {
      "action": "/deck.html",
      "accept": {
        "application/x-tcg-deck": [".deck", ".dck"],
        "text/plain": [".txt"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "deck_file",
          "accept": ["application/x-tcg-deck", ".deck", ".dck", ".txt"]
        },
        {
          "name": "card_image",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+hatakesocial",
      "url": "/deck.html?import=%s"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "display_override": ["window-controls-overlay", "standalone"],
  "handle_links": "preferred"
}

