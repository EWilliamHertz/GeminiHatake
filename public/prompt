                        <button id="save-all-btn" class="px-8 py-3 bg-green-600 text-white font-bold rounded-full hover:bg-green-700 transition-colors">
                            <i class="fas fa-save mr-2"></i>Save All to Collection
                        </button>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

